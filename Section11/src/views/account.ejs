<%- include('includes/header'); %>

    <main>
        <section class='hero mt-5 mb-5'>
            <div class='container'>
                <div class='row'>
                    <div class='col-lg-8 mx-auto'>
                        <div class='introduction text-center'>
                            <div class='title'>
                                <h1>Account Management</h1>
                            </div>

                            <div class='subtitle'>
                                <p>To update your account details just modify the form and Save</p>
                            </div>
                        </div>

                        <%- include('includes/messages'); %>

                        <form id='account' action='/account' method='post'>
                            <input type='hidden' name='_csrf' value='<%= csrfToken %>'>

                            <div class='mb-3'>
                                <label for='inputEmail' class='form-label'>Email address</label>
                                <input value='<%= user.email %>' type='email' class='form-control' id='inputEmail' name='inputEmail'>
                            </div>
                            
                            <div class='mb-3'>
                                <label for='inputPassword' class='form-label'>Password</label>
                                <input type='password' class='form-control' id='inputPassword' name='inputPassword'>
                            </div>

                            <div class='mb-3'>
                                <label for='inputConfirmPassword' class='form-label'>Confirm Password</label>
                                <input type='password' class='form-control' id='inputConfirmPassword' name='inputConfirmPassword'>
                            </div>

                            <button type='submit' class='btn btn-primary'>Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

<%- include('includes/footer'); %>